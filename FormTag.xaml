<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="Konachan.FormTag" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid
		Height="27">
		<WrapPanel Orientation="Horizontal">
			<TextBox
				IsEnabled="False"
				BorderThickness="0"
				x:Name="TagName"
				Height="23"
				HorizontalAlignment="Center"
				VerticalAlignment="Top"
				Margin="0,0,0,0" />
			<Button
				x:Name="RemoveButton"
				Content="X"
				Height="23"
				Width="28"
				HorizontalAlignment="Stretch"
				VerticalAlignment="Top"
				Margin="0,0,0,0" 
				BorderThickness="0"/>
		</WrapPanel>
	</Grid>
</UserControl>